<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_12sdp">

            <TextView
                android:id="@+id/titleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/id"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/tvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@id/titleId"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/montserrat_medium"
                android:text="15Afg45jrOgF"
                android:textColor="@color/colorGrey" />

            <TextView
                android:id="@+id/titleTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleId"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/amount"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleId"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_toRightOf="@id/titleTo"
                android:fontFamily="@font/montserrat_medium"
                android:text="15$"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/_14sdp" />
            <com.google.android.material.chip.Chip
                android:id="@+id/chipTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/montserrat_medium"
                android:text="Tax(3$)"
                android:layout_centerVertical="true"
                android:textColor="@color/colorWhite"
                app:chipBackgroundColor="@color/colorBlue"
                app:chipIconEnabled="false"
                app:closeIconEnabled="false" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_12sdp"
        android:fontFamily="@font/montserrat_regular"
        android:text="12 July, 2021"
        android:layout_gravity="right"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/_10ssp" />
</LinearLayout>