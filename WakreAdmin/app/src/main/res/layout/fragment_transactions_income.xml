<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_12sdp"
    android:background="@color/colorWhiteBG"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.main.TransactionsIncomeFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_6sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_32sdp"
            android:paddingTop="@dimen/_16sdp"
            android:paddingRight="@dimen/_32sdp"
            android:paddingBottom="@dimen/_16sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/earns" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textStyle="bold"
                android:text="25.55$"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/_16ssp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <EditText
        android:id="@+id/edSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_12sdp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorGreyDark"
        android:hint="@string/search"
        android:layout_margin="@dimen/_16sdp"
        android:inputType="phone"
        android:textSize="@dimen/_10ssp"
        android:drawableRight="@drawable/ic_search"
        android:background="@drawable/bg_search"/>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    tools:listitem="@layout/item_tax_transaction"/>

</LinearLayout>